<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_cat_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Azim"
            android:gravity="center"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_national_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_name"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_national_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="National Id"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_id_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_national_id"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_phone_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+97 1212122323"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_phone"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_email_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="email@email.com"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_nationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_email"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nationality"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_nationality_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Qatar"
            android:gravity="center"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_emergency_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_nationality"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_emergency_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Emergency Name"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_emergency_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Azim"
            android:gravity="center"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_emergency_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_emergency_name"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_emergency_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Emergency Phone"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_emergency_phone_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+97 324542323"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_udpate_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_emergency_phone"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_update_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update data?"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_update_data_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Create a Request"
            android:layout_weight="6"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>