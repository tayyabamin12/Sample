<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Document Type"
            android:layout_weight="4"/>
        <Spinner
            android:id="@+id/s_type"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_type"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Number"
            android:layout_weight="4"/>
        <EditText
            android:id="@+id/tv_num_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:inputType="text"
            android:importantForAutofill="no"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_num"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Issuing Country"
            android:layout_weight="4"/>
        <EditText
            android:id="@+id/tv_country_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_country"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Expired On"
            android:layout_weight="4"/>
        <EditText
            android:id="@+id/tv_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="date"
            android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_upload_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_date"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_upload_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Picture"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tv_upload_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Browse / Capture"
            android:layout_weight="6"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_upload_pic"
        style="@style/Widget.MaterialComponents.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>