<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_due_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pay_till"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_due_date"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_pay_till"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pay till:"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_pay_till_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="31-12-2021"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_due_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_pay_till"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_due_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Payment:"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_due_payment_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="QAR 1000"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_credit_card_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_due_payment"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_credit_card_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Credit Card No"
            android:layout_weight="5"/>
        <Spinner
            android:id="@+id/s_priority"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_valid_till"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_credit_card_no"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_valid_till"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Valid till:"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_valid_till_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01-01-2021"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Security_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_valid_till"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_security_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Security Code"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_security_code_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_Security_code"
        style="@style/Widget.MaterialComponents.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>