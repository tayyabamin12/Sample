<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_due_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pay_till"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_due_date"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_pay_till"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pay till:"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_pay_till_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="31-12-2021"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_due_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_pay_till"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_due_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Payment:"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_due_payment_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="QAR 1000"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_paid_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_due_payment"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_paid_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paid to"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_paid_to_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_payment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_paid_to"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_payment_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment Date"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_payment_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01-01-2021"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_upload_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_payment_date"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_upload_receipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Receipt"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tv_upload_receipt_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Browse/Capture"
            android:layout_weight="5"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_upload_receipt"
        style="@style/Widget.MaterialComponents.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>