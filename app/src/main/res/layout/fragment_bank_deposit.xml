<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/layout_bar_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:boxBackgroundColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Due Date"
                app:boxStrokeColor="@color/purple_500"
                app:hintTextColor="@color/blue"
                android:layout_marginBottom="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_due_date"
                    android:layout_width="match_parent"
                    android:focusableInTouchMode="false"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_pay_till"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pay Till"
                app:boxStrokeColor="@color/purple_500"
                app:hintTextColor="@color/blue"
                android:layout_marginBottom="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pay_till"
                    android:layout_width="match_parent"
                    android:focusableInTouchMode="false"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_due_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Due Payment"
                app:boxStrokeColor="@color/purple_500"
                app:hintTextColor="@color/blue"
                android:layout_marginBottom="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_due_payment"
                    android:layout_width="match_parent"
                    android:focusableInTouchMode="false"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank"
                app:boxStrokeColor="@color/purple_500"
                app:hintTextColor="@color/blue"
                android:layout_marginBottom="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Upload Receipt"
                app:boxStrokeColor="@color/purple_500"
                app:hintTextColor="@color/blue"
                android:layout_marginBottom="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_receipt"
                    android:layout_width="match_parent"
                    android:focusableInTouchMode="false"
                    android:drawableEnd="@drawable/ic_menu_gallery_grey"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/blue"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>